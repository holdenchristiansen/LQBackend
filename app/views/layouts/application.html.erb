<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Liquor Cabinet" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Liquor Cabinet" %>">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div class="row-fluid" style="height:100%;">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding:0;height:100%">
        <div class="col-sm-3 col-md-2 col-lg-2" style="padding:0;height:100%;">
          <div class="sidebar-nav">
            <%= render 'layouts/navigation' %>
          </div>
        </div>
        <div class="col-sm-9 col-md-10 col-lg-10" style="background-color:#f8f8f8;padding:0;min-height:100%">
            <%= render 'layouts/messages' %>
            <%= yield %>
        </div>
      </div>

    </div>

  </body>
</html>
