<div class="title col-xs-12">
  <h1>GLASSES</h1>
  <div class="col-xs-12 links">
    <%= link_to 'New Glass', new_glass_path%>
  </div>
  
</div>



<div class="col-xs-12">
    <div class="row">
      <% @glasses.each do |glass| %>
      <div class="col-xs-4">
        <h3> <%= glass.name %></h3>
        <p><%= link_to 'Show', glass_path(glass) %> - <%= link_to 'Edit', edit_glass_path(glass) %> - <%= link_to 'Delete', glass, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
      <% end %>
    </div>
</div>


<div class="pagination col-xs-12">
  <%= will_paginate(@glasses) %>
</div>

<%= form_tag glasses_path, :method => :get do %>
  <%= content_tag :label do %>
    Search name:
    <%= text_field_tag :q, params[:q] %>
    <%= hidden_field_tag :page, 1 %>
  <% end %>
<% end %>